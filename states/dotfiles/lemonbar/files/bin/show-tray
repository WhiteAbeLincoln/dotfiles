#!/usr/bin/env bash

pkill -x dmenu
xdotool search --class conky windowunmap %@
if [ $(pgrep -cf stalonetray) -gt 0 ]; then
	wid=$(xdotool search --class stalonetray)
	if [ "$(xdotool search --onlyvisible --class stalonetray)" != "" ]; then
		xdotool windowunmap $wid
	else
		xdotool windowmap $wid
		xdotool windowraise $wid
	fi
else
	xdotool search --class stalonetray
	stalonetray &
fi

# credit to
# https://github.com/alexdelifer/dotfiles/blob/fde1c954c86422e227447a3ef62a5d2d4f19acf7/home/.config/bspwm/panel/stalonetray.sh
