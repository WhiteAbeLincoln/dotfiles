Config  {
          allDesktops   = True 
        , font = "xft:Source Code Pro:size=9:bold:antialias=true"
        , additionalFonts = ["xft:FontAwesome-9", "xft:Material Icons:size=11:antialias=true"]
        , pickBroadest  = True
        , bgColor       = "#1f1f1f"
        , fgColor       = "#aaaaaa"
        , position      = Top
        , persistent    = True
        , lowerOnStart  = True
        --, persistent    = False 
        , hideOnStart   = False
        , overrideRedirect = True
        , commands = 
            [ 
              Run Weather "KLGU" [ "--template", "<fc=#6d9cbe><tempF></fc>°F | <fc=#b6b3eb><skyCondition></fc> | <fc=#6d9cbe><rh></fc>%" ] 3600
            , Run Network "enp10s0" [ "--template", "<rx>↓<tx>↑", "-S", "True"] 10

            , Run MultiCpu      [ "--template" , "<autovbar>"
                                , "--Low"      , "50"         -- units: %
                                , "--High"     , "85"         -- units: %
                                , "--low"      , "darkgreen"
                                , "--normal"   , "darkorange"
                                , "--high"     , "darkred"
                                ] 10

            , Run Memory        [ "--template" ,"<usedratio>%"
                                , "--Low"      , "20"        -- units: %
                                , "--High"     , "90"        -- units: %
                                , "--low"      , "darkgreen"
                                , "--normal"   , "darkorange"
                                , "--high"     , "darkred"
                                ] 10
            , Run Date "%a %b %_d %H:%M " "date" 10
            , Run StdinReader
            ]
        , template = "%StdinReader%}<fc=#aec29b>%date%</fc>{%enp10s0% %memory% %multicpu% %KLGU% <action=`xmobar ~/Documents/desktop-config/xmobar-power.hs`><fn=1></fn></action> "
        }
